{
  "name": "env-sensei",
  "displayName": "Env Sensei",
  "description": "Detect hardcoded secrets and config values, extract to environment variables",
  "version": "0.1.0",
  "publisher": "env-sensei",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact"
  ],
  "main": "./out/main.js",
  "contributes": {
    "configuration": {
      "title": "Env Sensei",
      "properties": {
        "envSensei.envExampleFileName": {
          "type": "string",
          "default": ".env.example",
          "description": "Nombre del archivo .env example a usar para code actions e inventario."
        },
        "envSensei.severitySecrets": {
          "type": "string",
          "enum": ["error", "warning", "information", "hint"],
          "default": "error",
          "description": "Severidad para detecciones de secretos."
        },
        "envSensei.severityConfig": {
          "type": "string",
          "enum": ["error", "warning", "information", "hint"],
          "default": "warning",
          "description": "Severidad para detecciones de configuración."
        },
        "envSensei.ignoredGlobs": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "description": "Globs adicionales para ignorar al escanear inventario."
        },
        "envSensei.ignoredWords": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "description": "Palabras a ignorar en las detecciones (comparación parcial e insensible a mayúsculas)."
        },
        "envSensei.envVarPrefix": {
          "type": "string",
          "default": "",
          "description": "Prefijo aplicado al nombre de variable sugerido (ej: APP_)."
        },
        "envSensei.insertFallback": {
          "type": "boolean",
          "default": false,
          "description": "Si está activo, reemplazos usan process.env.VAR ?? \"\"."
        },
        "envSensei.schemaIntegration.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Habilita la code action para agregar al schema Zod."
        },
        "envSensei.schemaIntegration.schemaPath": {
          "type": "string",
          "default": "src/env.schema.ts",
          "description": "Ruta del archivo de schema Zod relativa al workspace."
        }
      }
    },
    "commands": [
      {
        "command": "envSensei.scanInventory",
        "title": "Env Sensei: Scan Env Var Inventory"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTests.js",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --minify",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "package": "npm run esbuild && npx vsce package --no-dependencies"
  },
  "dependencies": {
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.3",
    "eslint": "^8.50.0",
    "glob": "^10.0.0",
    "mocha": "^10.2.0"
  }
}
